{
    "manifest_version": 3,
    "name": "Duplicate Thumbnail Highlighter",
    "version": "0.2.0",
    "description": "Highlights videos whose thumbnails have been seen before.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "db.js",
                "hash.js",
                "content.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Duplicate Highlighter"
    }
}