{
    "manifest_version": 3,
    "name": "Duplicate Thumbnail Highlighter",
    "version": "0.3.0",
    "description": "Highlights duplicate thumbnails on a page using perceptual hashing.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://kwiky.com/*",
                "https://*.kwiky.com/*"
            ],
            "js": [
                "hash.js",
                "content.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Duplicate Highlighter"
    }
}
